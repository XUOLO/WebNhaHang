
@model PagedList.PagedList<WebNhaHang.Models.EF.Product>

@using PagedList.Mvc;
@using PagedList;
@{ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

