@model IEnumerable<WebNhaHang.Models.ApplicationUser>
@{
    ViewBag.Title = "Account Management";
}


<!-- Content Header (Page header) -->
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">ViewBag.Title </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/home/index" class="nav-link">Shop </a>
        </li>

    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> List of accounts</h3>

            <div class="card-tools">
                <a href="/admin/account/create" class="btn btn-success">Add New</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Account</th>
                        <th>Name</th>
                        <th>Email</th>

                        <th></th>


                    </tr>

                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {

                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td id="trow_@item.Id">
                                    @i
                                </td>
                                <td>@item.UserName</td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>

                                <td>
                                    @*<a href="/admin/account/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>*@

                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Delete</a>
                                </td>
                            </tr>
                            i++;
                        }

                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>


        $('body').on('click', '.btnDelete', function () {
            var id = $(this).data("id");
            var conf = confirm('Do you want to delete ?');
            if (conf === true) {
                $.ajax({
                    url: '/admin/account/delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            $('#trow_' + id).remove();
                        }
                    }

                });
            }
        });
    </script>
}