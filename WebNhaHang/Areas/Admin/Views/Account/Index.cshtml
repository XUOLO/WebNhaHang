@model IEnumerable<WebNhaHang.Models.ApplicationUser>
@{
    ViewBag.Title = "Account Management";
}


<!-- Content Header (Page header) -->
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">@ViewBag.Title </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/home/index" class="nav-link">Shop </a>
        </li>

    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> List of accounts</h3>

            <div class="card-tools">
                <a href="/admin/account/create" class="btn btn-success">Add New</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Account</th>
                        <th>Name</th>
                        <th>Email</th>

                        <th></th>


                    </tr>

                </thead>
                <tbody>

                    @if (Model != null && Model.Any())
                    {

                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td id="trow_@item.Id">
                                    @i
                                </td>
                                <td>@item.UserName</td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>

                                <td>
                                    <!-- Nút xóa sử dụng ajax -->
                                    <button data-id="@item.Id" class="btn btn-sm btn-danger delete-account">Xóa</button>
                                </td>
                            </tr>
                            i++;
                        }

                    }
                </tbody>
            </table>
        </div>






        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>
        $(document).ready(function () {
            $(".delete-account").click(function () {
                var accountId = $(this).data("id");
                if (confirm("Bạn có chắc chắn muốn xóa tài khoản này?")) {
                    $.ajax({
                        url: '/Account/DeleteAccount',
                        data: { id: accountId },
                        type: 'POST',
                        success: function (result) {
                            if (result.success === true) {
                                $("#trow_" + accountId).remove();
                                alert('Tài khoản đã được xóa thành công');
                            }
                            else {
                                alert('Có lỗi xảy ra khi xóa tài khoản');
                            }
                        }
                    });
                }
            });
        });
    </script>
}
