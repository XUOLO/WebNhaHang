@model WebNhaHang.Models.EF.OrderDetail

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td></td>
                    <td>@item.Product.Title</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@WebNhaHang.Common.FormatNumber((item.Price * item.Quantity), 0)</td>
                    <td></td>
                </tr>
            }

        </tbody>
    </table>
}