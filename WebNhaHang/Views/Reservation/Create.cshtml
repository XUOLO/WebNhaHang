    <body>

        <!--background-->
        <h1> Restaurant Reservation Form</h1>
        <div class="bg-agile">
            <div class="booking-suggestion text">
                <h3>Suggestions to book a table</h3>
                <ul>
                    <li>One person: book a single table</li>
                    <li>Going 2 people: book a double table</li>
                    <li>For groups of 4-6 people: book a table for 6 people.</li>
                    <li>Going in a group of 6-12 people: book a long table</li>
                    <li>Go in a group over 12 people: call directly Hotline: 0906303905</li>
                </ul>
            </div>
            <div class="book-reservation">
                @using (Html.BeginForm(Model.Action, "Reservation"))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-date-w3-agileits">
                        @Html.LabelFor(m => m.Name, new { @class = "fa fa-user", @value = "" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div class="form-date-w3-agileits">
                        @Html.LabelFor(m => m.Phone, new { @class = "fa fa-phone" })
                        <input type="text" name="Phone" required class="form-control" autocomplete="off"
                               pattern="(03|05|07|08|09)[0-9]{8}"
                               oninvalid="this.setCustomValidity('Phone numbers must start with 03, 05, 07, 08 or 09 and have exactly 10 digits')"
                               onchange="this.setCustomValidity('')" onkeypress="return valideNumber()" />
                        @Html.ValidationMessageFor(m => m.Phone)


                    </div>
                    <div class="form-date-w3-agileits">
                        @Html.LabelFor(m => m.Email, new { @class = "fa fa-envelope" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-date-w3-agileits">
                        @Html.LabelFor(m => m.Note, new { @class = "fa fa-address-card" })
                        @Html.TextBoxFor(m => m.Note, new { @class = "form-control", @required = "" })
                        @Html.ValidationMessageFor(m => m.Note)
                    </div>
                    <div class="form-date-w3-agileits">
                        @Html.LabelFor(m => m.Date, new { @class = "fa fa-calendar" })
                        @Html.TextBoxFor(m => m.Date, new { @class = "form-control datepicker"})
                        @Html.ValidationMessageFor(m => m.Date)

                    </div>
                    <div class="form-date-w3-agileits">
                        @Html.LabelFor(m => m.Time, new { @class = "fa fa-clock-o" })
                        @Html.TextBoxFor(m => m.Time, new { @class = "form-control   " })
                        @Html.ValidationMessageFor(m => m.Time)

                    </div>
                    <div class="form-left-agileits-w3layouts bottom-w3ls">
                        <label><i class="fa fa-home" aria-hidden="true"></i> Table type :</label>
                        @Html.DropDownListFor(m => m.Room, ViewBag.Rooms as SelectList, new { @class = "form-control" })

                    </div>
                    <div class="form-left-agileits-w3layouts">
                        <label>
                            <i class="fa fa-users" aria-hidden="true"></i> Number of people :
                        </label>
                        @Html.DropDownListFor(m => m.NumberOfPeople, (IEnumerable<SelectListItem>)ViewBag.Peoples, new { @class = "form-control" })
                    </div>


                    @Html.HiddenFor(x => x.Status, new { @class = "", @name = "Status", @value = "1" })


                    <div class="clear"></div>
                    <div class="make">
                        <input type="submit" value="Make a Reservation">
                        <button onclick="window.history.back();">Back</button>
                    </div>
                }
            </div>
            
        </div>
        <script>
         
            $(function () {
                $(".datepicker").datepicker({
                    dateFormat: "dd/mm/yy"
                });
            });
            
 
         
       
            function validPhoneNumber(event) {
                // Chỉ nhận các giá trị số và phím xoá
                if (event.charCode >= 48 && event.charCode <= 57 || event.keyCode === 8) {
                    var phoneNumberInputs = document.getElementsByName('Phone');
                    for (var i = 0; i < phoneNumberInputs.length; i++) {
                        var phoneNumber = phoneNumberInputs[i].value;
                        // Số điện thoại của Việt Nam có độ dài là 10 và bắt đầu từ số 0
                        if (phoneNumber.length < 10 || phoneNumber.charAt(0) !== '0') {
                            phoneNumberInputs[i].setCustomValidity('Phone numbers must start with 0 and be 10 digits long');
                        } else {
                            phoneNumberInputs[i].setCustomValidity('');
                        }
                    }
                    return true;
                } else {
                    event.preventDefault();
                    return false;
                }

        </script>
        <style>
            .bootstrap-timepicker-widget table td input {
                width: 60px;
                font-size: 1.3em;
