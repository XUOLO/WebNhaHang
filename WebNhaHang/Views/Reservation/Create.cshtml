                        border-bottom: 2px solid #fcab0e;
                    }

            .form-left-agileits-w3layouts {
                margin-bottom: 20px;
            }

                .form-left-agileits-w3layouts label {
                    font-size: 18px;
                    margin-right: 10px;
                }

            .make input[type="submit"] {
                background: #fcab0e;
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 16px;
                text-transform: uppercase;
                cursor: pointer;
                transition: all 0.3s ease-in-out;
            }

                .make input[type="submit"]:hover {
                    background: #333;
                }

            .make button {
                background: #fcab0e;
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 16px;
                text-transform: uppercase;
                cursor: pointer;
                transition: all 0.3s ease-in-out;
            }

                .make button :hover {
                    background: #333;
                }

            .text {
                color: red; /* Thay đổi màu chữ thành màu đỏ */
            }
        </style>


