@model WebNhaHang.Models.EF.Product
@{
    ViewBag.Title = "Chi tiết sản phẩm";



}

<link href="~/Content/cssformres/css/menu.css" rel="stylesheet" />

<!DOCTYPE html>
<html>

<head>
    <title>Chi tiết món ăn</title>
   
</head>

<body>
    <style>
        body {
        }

        .food-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            margin: 0 auto;
            margin-top: 4%;
        }

        img {
            max-width: 100%;
            height: auto;
            margin-bottom: 20px;
        }

        h2 {
            margin-top: 0;
        }

        .nutrition-facts {
            display: flex;
            justify-content: space-between;
            font-size: 14px;
            margin-bottom: 20px;
        }

            .nutrition-facts span {
                margin-right: 20px;
            }
        .btn-back {
            position: fixed;
            top: 20px;
            left: 20px;
            padding: 10px 20px;
            background-color: #f8f8f8;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            color: #333;
            cursor: pointer;
            margin-top: 4%;
        }
    </style>
    <div class="btn-back" onclick="window.history.back();">Quay lại</div>
    @if (Model != null)
    {


        if (Model.ProductImage != null && Model.ProductImage.Any())
        {

            foreach (var item in Model.ProductImage)
            {
                if (item.IsDefault)
                {




                    <div class="food-container">
                        <img src="@item.Image" alt="Tên món ăn" data-image="@item.Image">
                        <h2>@Model.Title</h2>
                        <div class="nutrition-facts">
                            <span>@Html.Raw(Model.Detail)</span>
                        </div>

                        <div class="description">
                            <h3>Mô tả:</h3>
                            <p>@Model.Description</p>

                        </div>
                    </div>
                }

            }


        }
    }
</body>
</html>
@section scripts{
    <script src="~/content/assets/js/single_custom.js"></script>

}