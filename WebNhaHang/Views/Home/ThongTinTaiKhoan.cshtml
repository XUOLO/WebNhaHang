@model List<WebNhaHang.Models.EF.User>

@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_LayoutOther.cshtml"; 
}


<link href="~/Content/Accountcss/_account.css" rel="stylesheet" />
<section class="check-out-section pt-40 pb-50">
    <style>
        .mautab a {
            margin-right: -11%;
        }
        .navbar-dark .navbar-brand img {
            margin-top: 105%;
        }
    </style>
    @if (Session["FullName"] != null)
    {
        string email = Session["Email"].ToString();
        string fullName = Session["FullName"].ToString();
        foreach (var user in Model)
        {
            if (user.Email == email)
            {



                <div class="container" style="max-width:1440px">
                    <div class="row" style="justify-content:center">
                        <div class="col-lg-3 col-12 mb-30">
                            <div class="myaccount-tab-menu nav" role="tablist">
                                <a href="/home/thongtintaikhan" class="active">
                                    <i class="fas fa-tachometer-alt"></i>
                                    Thông tin tài khoản
                                </a>
                                <div class="mautab">


                                    <a href="/home/order">
                                        <i class="fa fa-cart-arrow-down"></i>
                                        Sản phẩm mua sau
                                    </a>

                                </div>


                                <a href="/Home/InfoReservation">
                                    <i class="fa fa-user"></i>
                                    Quản lý đơn đặt bàn
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-8 mb-30">
                            <div class="tab-content" id="myaccountContent">
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade active show" id="dashboad" role="tabpanel">
                                    <div class="myaccount-content">

                                        <div id="accordion">
                                            <div class="row">
                                                <div class="col-xl-5">
                                                    <div class="card">
                                                        <div class="card-header">
                                                            <h5 class="card-title mb-0" style="">Thông tin người dùng</h5>
                                                        </div>
                                                        <div class="card-body">
                                                            <div class="row g-0">
                                                                <div class="col-sm-3 col-xl-12 col-xxl-3 text-center" style="display:block;width:100%">
                                                                    <img src="~/Content/assets/images/null.png" width="128" height="128" class="rounded-circle mb-2" alt="Angelica Ramos">
                                                                    <h5 class="card-title mb-0" style="font-family: Roboto,Helvetica,Arial,sans-serif;">@fullName </h5>
                                                                </div>
                                                            </div>

                                                            <table class="table table-sm mt-2 mb-4">
                                                                <tbody>
                                                                    <tr>
                                                                        <td name="Phone" id="Phone"> <i class="align-middle me-2 fa fa-phone"></i>@user.Phone</td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td name="Address" id="Address"><i class="align-middle me-2 fa fa-home"></i>@user.Address</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><div style="display: flex; align-items: center;"><i class="align-middle me-2 fa fa-envelope "></i><p style=" width: 203px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">@user.Email</p></div></td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-xl-7">
                                                    <div class="myaccount-content">
                                                        <div class="account-details-form">
                                                            @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
                                                            {
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" id="id" value="@user.Email" />

                                                                <div class="row">
                                                                    <div class="col-12 mb-30">

                                                                        <h4>Đổi mật khẩu </h4><br />
                                                                        <p style="color:forestgreen">@TempData["thongbao_password"]</p>

                                                                    </div>

                                                                    <div class="col-12 mb-30">
                                                                        <input id="currentPassword" required name="currentPassword" placeholder="Nhập mật khẩu cũ" type="password">
                                                                    </div>

                                                                    <div class="col-lg-6 col-12 mb-30">
                                                                        <input id="newPassword" required name="newPassword" placeholder="Nhập mật khẩu mới" type="password">
                                                                    </div>

                                                                    <div class="col-lg-6 col-12 mb-30">
                                                                        <input id="confirmPassword" required name="confirmPassword" placeholder="Nhập lại mật khẩu mới" type="password">
                                                                    </div>

                                                                    <div class="col-12 mb-30">
                                                                        <button type="submit" class="btn theme-btn--dark1 btn--md">
                                                                            Lưu Thay Đổi
                                                                        </button>
                                                                    </div>

                                                                </div>}
                                                        </div>


                                        




 







                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                </div>

                            </div>




                        </div>
                    </div>
                </div>
            }
        }
    }
</section>

<script>
    function valideNumber() {
        var charCode = (event.which) ? event.which : event.keyCode;
        if (charCode >= 48 && charCode <= 57) {
            return true;
        } else {
            return false;
        }
    }
</script>
